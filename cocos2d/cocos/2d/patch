-            else
-                setGLProgramState(GLProgramState::getOrCreateWithGLProgramName(GLProgram::SHADER_NAME_POSITION_TEXTURE_COLOR_NO_MVP, _getTexture(this)));
+        auto texture = _getTexture(this);
+        if(texture && texture->getAlphaTextureName())
