+void FontAtlas::updateTextureContent(backend::PixelFormat format, int startY)
+{
+    unsigned char *data = nullptr;
+    auto outlineSize = _fontFreeType->getOutlineSize();
+    if (outlineSize > 0 && format == backend::PixelFormat::AI88)
