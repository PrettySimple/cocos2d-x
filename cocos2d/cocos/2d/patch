-#if CC_FIX_ARTIFACTS_BY_STRECHING_TEXEL
-        left = (2 * rectInPixels.origin.x + 1) / (2 * atlasWidth);
-        right = left + (rectInPixels.size.width * 2 - 2) / (2 * atlasWidth);
